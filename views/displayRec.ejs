<!DOCTYPE html>
<html lang="en">
    <style>
        table, th, td {
            text-align: center;
            width: 500px;
            border:1px solid black;
            border-collapse: collapse;
        }
    </style>
    <script>
        window.onload = function () {
            let displayBtn = document.getElementById('displayButton');
            let recInput = document.getElementById('recInput');
            let recName = document.getElementsByTagName('b');

            displayBtn.addEventListener('click', function(){
                recInput.value = recName.value;
            });
        }
    </script>
    <head>
        <title>Display A Rectangle</title>
    </head>
    <body>
        <div class="container">
          <form class="" action="/" method="get">
            <input type="submit" name="" class = "button" value="Back Home">
          </form>
        </div>
        <div>
          <p align = "center" style="color: black; font-size: 30px;"><strong>Display your choice:</strong></p>
          <br>
          <div class="box">
            <% rows.forEach((r) => { %>
              <div>
              <!-- <p style="color: black; font-size: 30px;"><%= r.name %></p> -->
              <canvas width="<%= r.width %>" height="<%= r.height %>" style="border:4px solid green; background-color: green;"></canvas>
              </div>
            <% }); %>
          </div>
        </div>

        <ul>
            <table>
              <tr>
                <th>&nbsp name</th>
                <th>&nbsp color</th>
                <th>&nbsp width</th>
                <th>&nbsp height</th>
                <th>&nbsp age</th>
                <th>&nbsp gender</th>
              </tr>
            </table>
              <% rows.forEach(function(r) { %>
                <table>
                  <tr>
                    <td>
                        <form action="/display" method="post">
                            <button id="displayButton"><p name="name"><b><%= r.name %></b></p></button>
                            <!-- <input style="display: none;" id='recInput' type='text' name='name'> -->
                        </form>
                    </td>
                    <td><%= r.color %></td>
                    <td><%= r.width %></td>
                    <td><%= r.height %></td>
                    <td><%= r.age %></td>
                    <td><%= r.gender %></td>
                  </tr>
                </table>
              <% }); %>
          </ul>
      </body>
</html>